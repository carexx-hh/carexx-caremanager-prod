<form bindsubmit="formSubmit" >
<view class='list' style='padding-left:30rpx;box-sizing:border-box;margin-top:20rpx;'>
<view class='kind'>
<view class='kind-name'>姓名</view>
<view class='t-k-name'>
<input placeholder='{{coupons.realName}}' name='input_name' class='input-name' type='text' placeholder-style='font-size:28rpx;color:rgba(165,170,184,1);' style="text-align:right;font-size:28rpx;color:rgba(165,170,184,1);"  bindinput="nameInput"></input>
</view>
</view>
</view>
<!--  -->
<view class='list' style='padding-left:30rpx;box-sizing:border-box;'>
<view class='kind'>
<view class='kind-name'>性别</view>
<view class='t-k-name'>
<input placeholder='{{coupons.sex==0?"未知":(coupons.sex==1?"男":"女")}}' name='input_sex' class='input-name' type='text' placeholder-style='font-size:28rpx;color:rgba(165,170,184,1);' style="text-align:right;font-size:28rpx;color:rgba(165,170,184,1);"  bindinput="nameInput"></input>
</view>
</view>
</view>
<!--  -->
<view class='list' style='padding-left:30rpx;box-sizing:border-box;'>
<view class='kind'>
<view class='kind-name'>手机号</view>
<view class='t-k-name' style='width:38%;'>
<input placeholder='{{coupons.phone}}' class='input-phone' name='input_phone' value="{{phone}}" type='number' maxlength="11" bindinput="mobileInput" placeholder-style='font-size:28rpx;color:rgba(165,170,184,1);' style="text-align:right;font-size:28rpx;color:rgba(165,170,184,1);"></input>
</view>
</view>
</view>
<!--  -->
<view class='list' style='padding-left:30rpx;box-sizing:border-box;'>
<view class='kind'>
<view class='kind-name'>身份证</view>
<view class='t-k-name'>
<input placeholder='{{coupons.idNo}}' class='input-idno' type='text' name='input_idNo' placeholder-style='font-size:28rpx;color:rgba(165,170,184,1);' style="text-align:right;font-size:28rpx;color:rgba(165,170,184,1);" bindinput="bedInput"></input>
</view>
</view>
</view>
<!--  -->
<view class='list' style='padding-left:30rpx;box-sizing:border-box;'>
<view class='kind'>
<view class='kind-name'>地址</view>
<view class='t-k-name'>
<input placeholder='{{coupons.address}}' class='input-address' type='text' name='input_address' placeholder-style='font-size:28rpx;color:rgba(165,170,184,1);' style="text-align:right;font-size:28rpx;color:rgba(165,170,184,1);" bindinput="bedInput"></input>
</view>
</view>
</view>
<!--  -->
<view class='list' style='padding-left:30rpx;box-sizing:border-box;'>
<view class='kind'>
<view class='kind-name'>所属机构</view>
<view class='t-k-name'>
<input placeholder='{{coupons.instName}}' class='input-instName' type='text' name='input_instName' placeholder-style='font-size:28rpx;color:rgba(165,170,184,1);' style="text-align:right;font-size:28rpx;color:rgba(165,170,184,1);" bindinput="bedInput"></input>
</view>
</view>
</view>
<!--  -->
<view class='list' style='padding-left:30rpx;box-sizing:border-box;'>
<view class='kind'>
<view class='kind-name'>服务机构</view>
<view class='t-k-name'>
<input placeholder='{{coupons.serviceInstName}}' class='input-serviceInstName' type='text' name='input_serviceInstName' placeholder-style='font-size:28rpx;color:rgba(165,170,184,1);' style="text-align:right;font-size:28rpx;color:rgba(165,170,184,1);" bindinput="bedInput"></input>
</view>
</view>
</view>
<!--  -->
<button class="button" bindtap="regist" form-type='submit'>保存</button>
<view class="buuton-t"></view>
</form>